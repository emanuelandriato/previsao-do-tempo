<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_previsao">

    <ImageView
        android:layout_height="40dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="24dp"
        android:id="@+id/imageViewTempo"
        android:layout_width="40dp" />

    <TextView
        android:text="Periodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:id="@+id/textViewPeriodo"
        android:textSize="26sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewTempo"
        android:layout_toEndOf="@+id/imageViewTempo"
        android:layout_marginTop="12dp" />

    <TextView
        android:text="30°"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:id="@+id/textViewTemperatura"
        android:textSize="38sp"
        android:layout_alignTop="@+id/textViewPeriodo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Céu claro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPeriodo"
        android:layout_alignLeft="@+id/textViewPeriodo"
        android:layout_alignStart="@+id/textViewPeriodo"
        android:id="@+id/textViewDescricao" />
</RelativeLayout>
